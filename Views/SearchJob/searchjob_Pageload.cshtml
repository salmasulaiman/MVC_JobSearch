@model MVC_JobSearch.Models.JobSearch
@{
    ViewBag.Title = "searchjob_Pageload";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Search Jobs</h2>

<div>
    @using (Html.BeginForm("searchjob_click", "SearchJob", FormMethod.Post))
    {
        <table>
            <tr>
                <td style="padding-left:8px;"> <label>Skills:</label></td>
                <td> @Html.TextBoxFor(m => m.insertse.skills)</td>
                <td style="padding-left:8px;"> <label>Experience:</label></td>
                <td> @Html.TextBoxFor(m => m.insertse.experience)</td>
                <td style="padding-left:8px;"> <label>Title:</label></td>
                <td> @Html.TextBoxFor(m => m.insertse.jobtitle)</td>
                <td><input type="submit" value="search" /> </td>
            </tr>
        </table>
        <br />
        <br/>
    }
</div>
<div>
    @using (Html.BeginForm("searchjob_Pageload", "SearchJob", FormMethod.Get))
    {
        if (Model != null)
        {
            if (Model.selectjob != null && Model.selectjob.Count != 0)
            {
                <table class="table">
                    <tr>
                    </tr>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(m => m.insertse.company_Id)
                        </th>
                        <th>
                            @Html.DisplayNameFor(m => m.insertse.jobtitle)
                        </th>
                        <th>
                            @Html.DisplayNameFor(m => m.insertse.skills)
                        </th>
                        <th>
                            @Html.DisplayNameFor(m => m.insertse.experience)
                        </th>
                        <th>
                            @Html.DisplayNameFor(m => m.insertse.job_Status)
                        </th>
                        <th>
                            @Html.DisplayNameFor(m => m.insertse.last_Date)
                        </th>
                    </tr>


                    @foreach (var item in Model.selectjob)
                    {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.company_Id)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.jobtitle)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.skills)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.experience)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.job_Status)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.last_Date)
                    </td>
                    <td>

                        @Html.ActionLink("Apply Now", "Application_Pageload", "ApplyJob", new { cid = item.company_Id, jid = item.job_id }, null)

                    </td>

                </tr>
                    }

                </table>
            }
            else
            {
                <script>
                    alert('no data found');
                </script>
            }
        }
    }
    <div>
        @Html.ActionLink("Back to Home Page", "UserHome", "UserLogin")

    </div>


</div>



